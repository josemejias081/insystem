<p><%= f("devise.mailer.email_changed.greeting") %> <%= @email %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= f("devise.mailer.email_changed.message") %> <%= @resource.unconfirmed_email %>.</p>
<% else %>
  <p><%= f("devise.mailer.email_changed.subject") %> <%= @resource.email %>.</p>
<% end %>
